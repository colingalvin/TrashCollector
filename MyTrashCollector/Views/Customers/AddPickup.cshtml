@model MyTrashCollector.Models.Customer

@{
    ViewData["Title"] = "Add Pickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Schedule Additional Pickup</h1>

<h4>Enter Date Below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdditionalPickupDate" class="control-label"></label>
                <input asp-for="AdditionalPickupDate" class="form-control" />
                <span asp-validation-for="AdditionalPickupDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
