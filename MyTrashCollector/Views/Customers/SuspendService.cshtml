@model MyTrashCollector.Models.Customer

@{
    ViewData["Title"] = "Suspend Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Schedule Suspension of Service</h1>

<h4>Enter Start and End Dates Below for INSERT ADDRESS HERE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuspendService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="FirstName" />
            <input type="hidden" asp-for="LastName" />
            <input type="hidden" asp-for="AddressId" />
            <input type="hidden" asp-for="AccountBalance" />
            <input type="hidden" asp-for="SpecialPickupStatus" />
            <input type="hidden" asp-for="RegularPickupDay" />
            <input type="hidden" asp-for="AdditionalPickupDate" />
            <input type="hidden" asp-for="IdentityUserId" />
            <div class="form-group">
                <label asp-for="SuspendStartDate" class="control-label"></label>
                <input asp-for="SuspendStartDate" class="form-control" />
                <span asp-validation-for="SuspendStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendEndDate" class="control-label"></label>
                <input asp-for="SuspendEndDate" class="form-control" />
                <span asp-validation-for="SuspendEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
